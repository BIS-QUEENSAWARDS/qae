.row
  .col-md-4
    .show-sidebar
      / TODO Reports
      .well
        h2
          ' Reports
        ul.list-unstyled.list-actions
          - ["Innovation Case Status", "Intl Trade Case Status", "Sus Dev Case Status", "QAEP Case Status", "All Entries", "Press Book List"].each do |report|
            li class="#{'todo-placeholder' unless report == 'All Entries'}"
              .pull-right
                =link_to admin_report_path(Reports::AdminReport::ADMIN_REPORT, format: :csv)
                  span.glyphicon.glyphicon-download-alt
                  span.visible-lg.visible-md
                    ' Download
              = link_to "#", class: "action-title"
                span.glyphicon.glyphicon-file
                = report
        .clear

      - if policy(:report).show?
        = render "admin/feedbacks/pdf_reports"

      / TODO resources
      .well
        h2
          ' Resources
        ul.list-unstyled.list-actions
          - ["sample-application-form.pdf", "audit-certification-template.pdf", "lorem-ipsum-document.pdf"].each do |resources|
            li.todo-unconfirmed
              .pull-right
                = link_to "#"
                  span.glyphicon.glyphicon-download-alt
                  span.visible-lg.visible-md
                    ' Download
              = link_to "#", class: "action-title"
                span.glyphicon.glyphicon-file
                = resources
        .clear

