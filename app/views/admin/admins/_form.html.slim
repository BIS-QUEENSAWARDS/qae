= simple_form_for [:admin, resource], html: { class: 'qae-form' } do |f|
  .row
    .col-md-4.col-sm-6
      = f.input :email,
                wrapper_html: { class: 'form-group' },
                input_html: { class: 'form-control' }
  .row
    .col-md-4.col-sm-6
      = f.input :first_name,
                wrapper_html: { class: 'form-group' },
                input_html: { class: 'form-control' }
  .row
    .col-md-4.col-sm-6
      = f.input :last_name,
                wrapper_html: { class: 'form-group' },
                input_html: { class: 'form-control' }

  .row
    .col-md-4.col-sm-6
      = f.input :password,
                wrapper_html: { class: 'form-group' },
                input_html: { class: 'form-control' }

      = f.input :password_confirmation,
                wrapper_html: { class: 'form-group' },
                input_html: { class: 'form-control' }

  br
  .row
    .col-md-4.col-sm-6
      = link_to "Cancel",
                admin_admins_path,
                class: 'btn btn-default btn-md'

      .pull-right
        - if action_name == "edit" && policy(resource).destroy?
          = link_to 'Delete', admin_admin_path(resource), data: { method: :delete, confirm: 'Are you sure?' }, class: 'btn btn-danger btn-md'

          ' &nbsp;

        = f.button :submit,
                  class: 'btn btn-primary btn-md'
