.panel.panel-default
  .panel-heading#admin-comments-heading role="tab"
    h4.panel-title
      a data-toggle="collapse" data-parent="#panel-application-info" href="#section-admin-comments" aria-expanded="true" aria-controls="section-admin-comments"
        ' Admin Comments
  #section-admin-comments.section-admin-comments.panel-collapse.collapse.in role="tabpanel" aria-labelledby="admin-comments-heading"
    .panel-body
      .comments-container data-comment-form=new_admin_form_answer_comment_path(@form_answer)
        = render(collection: @form_answer.comments, partial: 'comment')
        .comment-footer
        = form_for([:admin, @form_answer, Comment.new(commentable: @form_answer)]) do |f|
          = render('admin/comments/form', f: f)
