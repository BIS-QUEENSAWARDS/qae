form.qae-form.award-form data-autosave-url=autosave_url(@form_answer) action=submit_form_url(@form_answer) method="POST"
  input name="authenticity_token" type="hidden" value=form_authenticity_token
  = render partial: 'qae_form/form_header', object: @form, as: 'form'
  = render partial: 'qae_form/step', collection: @form.steps, locals: {form: @form, answers: (HashWithIndifferentAccess.new(@form_answer.document || {}))}
