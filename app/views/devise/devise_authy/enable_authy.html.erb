<h2><%= I18n.t('authy_register_title', {:scope => 'devise'}) %></h2>

<%= enable_authy_form do %>
  <%= text_field_tag :country_code, '', :autocomplete => :off, :placeholder => I18n.t('devise.country'), :id => "authy-countries", value: "44" %>
  <%= text_field_tag :cellphone, '', :autocomplete => :off, :placeholder => I18n.t('devise.cellphone'), :id => "authy-cellphone"%>
  <%= submit_tag I18n.t('enable_authy', {:scope => 'devise'}), class: "btn btn-primary" %>
<% end %>
